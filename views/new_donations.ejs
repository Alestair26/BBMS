<head>
    <style>
        td{
            padding:6px;
            text-align: center;
        }
    </style>
</head>

<% include ./partials/admin_header %>
<div class="jumbotron" style="background-color: rgb(252, 147, 147); margin:0px;">
        <div class="container" style="font-family: algerian-regular;margin:10px; width:500px;">
            <h1>WELCOME ADMIN</h1>
        </div>
</div>
<div class="jumbotron">
        <div class="jumbotron" style="background-color: aqua;margin:0px">
                <ul class="list-group list-group-horizontal-lg">
                    <li class="list-group-item"><a href="/admin/view_donations">View donations</a></li>
                    <li class="list-group-item"><a href="/admin/new_camps">Add Camps</a></li>
                </ul>
        </div>
</div>
<div class="jumbotron" style="margin:0px">
    <div class="container" style=" margin:10px; width:4000px;background-color: rgb(248, 252, 252);height:500px;padding-top:20px;padding-left:200px;">
        <div>
            <table style="border:2px solid black">
                <tr style="border:2px solid black">
                    <td style="border:2px solid black"><strong>Camp</strong></td>
                    <td style="border:2px solid black"><strong>Quantity</strong></td>
                    <td style="border:2px solid black"><strong>Date</strong></td>
                    <td style="border:2px solid black"><strong>Status</strong></td>
                </tr>
                <% donations.forEach(function(donation){ %>
                    <tr style="border:2px solid black">
                        <td style="border:2px solid black"><%= donation.camp %></td>
                        <td style="border:2px solid black"><%= donation.quantity %></td>
                        <td style="border:2px solid black"><%= donation.date %></td>
                        <td style="border:2px solid black"><%= donation.status %></td>
                        <td style="border:2px solid black"></td>
                    </tr>
                <% }) %>
            </table>
        </div>    
    </div>
</div>

<% include ./partials/footer %>